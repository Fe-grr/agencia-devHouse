            <input class="input-padrao" type="tel" name="telefone" placeholder="número de telefone">
    
            <select class="input-padrao" name="servico">
                <option value="value" selected disabled>Selecione um serviço</option>
                <option value="site">Site</option>
                <option value="sistema">Sistema</option>
                <option value="landPage">LandPage</option>
                <option value="app">Aplicativo</option>
            </select>
            <div class="ladoALado">
                <button class="buttonPadrao" type="submit">Enviar</button>
